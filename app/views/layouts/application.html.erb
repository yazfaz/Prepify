  <section id="wrap">
    <%= yield %>
  </section>
  
  <footer id="footer">
    <div class="row">
      <div class="small-3 columns">
        <ul>PREPIFY</ul>
          <li><i class="fa fa-twitter"></i> Follow us on Twitter</li>
          <li><i class="fa fa-facebook-square"></i> Like us on Facebook</li>
          <li><i class="fa fa-rss-square"></i><%= link_to " Read our Blog", posts_path %></li>
        </ul>
      </div>
      <div class="small-3 columns">
        <ul>MORE RESOURCES</ul>
          <li><i class="fa fa-long-arrow-right"></i> College Board</li>
          <li><i class="fa fa-long-arrow-right"></i> Flash Cards</li>
          <li><i class="fa fa-long-arrow-right"></i> SAT Info</li>
          <li><i class="fa fa-long-arrow-right"></i> More Stuff</li>
        </ul>
      </div>

      <div class="small-5 columns">
        <ul><%= image_tag("Prepify_logo_white.png", size: "150", class:"logo")%>
          <li>SAT prep for everyone</li>
        </ul>
      </ul>

    </div>
  </footer>  

    <%#= javascript_include_tag "application" %>
    <%= yield :javascript %>
